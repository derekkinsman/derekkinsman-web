{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "yoda": [2, "never", { "exceptRange": true }],
    "semi": [2, "always"],
    "max-len": [
      "error",
      {
        "code": 80,
        "tabWidth": 2,
        "comments": 80,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  }
}
